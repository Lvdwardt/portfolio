root = true

[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,js,tsx,jsx}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
